{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "**/src/**/*.ts",
    "**/test/**/*.ts",
    "./*.js",
    "./*.ts",
    "./*.mts",
    "./*.cjs",
    "./*.cts",
    "./*.mjs",
  ],
  "exclude": ["node_modules", "**/dist/**/*"]
}
